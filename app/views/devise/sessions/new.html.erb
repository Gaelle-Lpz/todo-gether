<div class="container">
  <div class="container-flex mt-5 mb-5">
    <p class="hand me-3">ðŸ‘‹</p>
    <h2> Nice to see you again !</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "sign-form" } %>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "current-password", class: "sign-form" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "button-sign mb-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
